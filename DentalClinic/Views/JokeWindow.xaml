<Window x:Class="DentalClinic.Views.JokeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentalClinic.Views"
        mc:Ignorable="d"
        Title="JokeWindow" Height="450" Width="800">
    <Grid>
        <Image Source="/Resources/refferal.jpg" />
        <Button x:Name="Ok" Click="Ok_Click"  Content="Ok" Grid.Column="0" Width="100" Height="35" Background="#FF4E97FC" BorderBrush="Transparent" Foreground="White" Margin="40,0,0,0">
            <Button.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="1"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
